<% n=0 %>
<% @architemp.each do |a| %>
	<% n=n+1 %>
	<tr>						         				          
	  <td><%= n %></td>	  	
	  <td><%= a.style %></td>
	  <td><%= a.code %></td>
	  <td id="c<%= a.id %>"><textarea rows="2" cols="40" readonly><%= a.namen %></textarea>
		<!-- Modal Descripcion -->
		<div class="modal fade" id="myModald<%= a.id %>" role="dialog">
			<div class="modal-dialog">
				<div class="modal-content">
					<div class="modal-header" style="background-color:#F3EA5D">
					<button type="button" class="close" data-dismiss="modal">&times;</button>
					<h4 class="modal-title" style="text-align: center"><b>Edit:</b> Code: <%= a.code %> - Style: <%= a.style %></h4>
					</div>
					<div class="modal-body">
						<form action="/subirproducto/subir_producto/edit" accept-charset="UTF-8" method="get">
						<div class="row">						
							<div class="col-lg-3 col-md-2 col-sm-2 col-xs-2">
							<img src="<%= a.imagen %>" width="100px" style="margin-left:20px">
							<input type="hidden" class="form-control" name="id" value="<%= a.id %>">
							<input name="albb" type="hidden" value=<%= @albumv %>>
							</div>
							<div class="col-lg-9 col-md-9 col-sm-9 col-xs-9">
							<textarea name="name" rows="20" cols="50" value="<%= a.namen %>"><%= a.namen %></textarea>
							</div>
						</div>					
					</div>
					<div class="modal-footer">
					<button type="submit" class="btn btn-primary">Guardar</button>
					<button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
						</form>
					</div>        
				</div>
			</div>
		</div>						          	
  </td>				          
  <td><img src="<%= a.imagen %>"  width="47px" data-toggle="modal" data-target="#myModal<%= n %>" class="img-thumbnail">
  	 <!-- Modal Imagen -->
        <div class="modal fade" id="myModal<%= n %>" role="dialog">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title" style="text-align: center">Code: <%= a.code %> - Style: <%= a.style %></h4>
              </div>
              <div class="modal-body">
                <img src="<%= a.imagen %>" width="570px" style="margin: auto">
              </div>        
            </div>
          </div>
        </div>
  </td>
   <td>
   	<div>
   		<form action="/subirproducto/subir_producto/delete"  method="get">
   	<button type="button" class="btn btn-default" data-toggle="modal" data-target="#myModald<%= a.id %>">Editar</button>
   	
		  
		       <input type="submit" value="Eliminar" class="btn btn-danger" style="margin-left: 10px">
		       <input name="albb" type="hidden" value=<%= @albumv %>>
		       <input name="id" type="hidden" value=<%= a.id %>>
		   
	    </form>	
	    </div>    
  </td>					          
</tr>
<% end %>
